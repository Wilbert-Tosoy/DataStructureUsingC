#include <stdio.h>

void FindSmallest();

int main(void) {
    FindSmallest();

    return 0;
}

void FindSmallest() {
    int x, y, z;

    printf("Enter the first number: ");
    scanf("%d", &x);
    printf("Enter the second number: ");
    scanf("%d", &y);
    printf("Enter the third number: ");
    scanf("%d", &z);

    if (x < y && x < z) {
        printf("&d is the smallest", x);
    } else if (y < x && y < z) {
        printf("%d is the smallest", y);
    } else if (z < x && z < y) {
        printf("%d is the smallest", z);
    } else {
        printf("Error!");
    }

}
