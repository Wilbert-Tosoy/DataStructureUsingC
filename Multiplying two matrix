#include <stdio.h>

// Multiply two matrices.
int main() {
    // Declaration of variables.
    int row_size1, row_size2, column_size1, column_size2;

    // Get the row size and column size of Matrix-1.
    printf("Enter the row size of Matrix-1: ");
    scanf("%d", &row_size1);
    printf("Enter the column size of Matrix-1: ");
    scanf("%d", &column_size1);

    // Get the row size and column size of Matrix-2.
    printf("\nEnter the row size of Matrix-2: ");
    scanf("%d", &row_size2);
    printf("Enter the column size of Matrix-2: ");
    scanf("%d", &column_size2);

    // Check if multiplication is possible.
    if (column_size1 != row_size2) {
        printf("Column size of Matrix-1 must be equal to Row size of Matrix-2.");
    } else {
        // Declaration of Matrices.
        int matrix1[row_size1][column_size1];
        int matrix2[row_size2][column_size2];

        // Initialization of both matrix.
        printf("\nEnter the elements of Matrix-1\n");
        for (int i = 0; i < row_size1; i++) {
            for (int j = 0; j < column_size1; j++) {
                printf("Matrix-1 [%d][%d]: ", i, j);
                scanf("%d", &matrix1[i][j]);
            }
        }
        printf("\nEnter the elements of Matrix-2\n");
        for (int i = 0; i < row_size2; i++) {
            for (int j = 0; j < column_size2; j++) {
                printf("Matrix-2 [%d][%d]: ", i, j);
                scanf("%d", &matrix2[i][j]);
            }
        }

        // Print the elements of both matrix.
        printf("\nMatrix-1\n");
        for (int i = 0; i < row_size1; i++) {
            for (int j = 0; j < column_size1; j++) {
                printf("%d\t", matrix1[i][j]);
            }
            printf("\n");
        }
        printf("\nMatrix-2\n");
        for (int i = 0; i < row_size2; i++) {
            for (int j = 0; j < column_size2; j++) {
                printf("%d\t", matrix2[i][j]);
            }
            printf("\n");
        }

        // Declaring the Product Matrix.
        int product[row_size1][column_size2];

        // Initializing the Product Matrix.
        for (int i = 0; i < row_size1; i++) {
            for (int j = 0; j < column_size2; j++) {
                product[i][j] = 0;
                for (int k = 0; k < column_size2; k++) {
                    product[i][j] = (matrix1[i][k] * matrix2[k][j]) + product[i][j];
                }
            }
        }

        // Printing the Product Matrix.
        printf("\nProduct Matrix\n");
        for (int i = 0; i < row_size1; i++) {
            for (int j = 0; j < column_size2; j++) {
                printf("%d\t", product[i][j]);
            }
            printf("\n");
        }

    }

    return 0;
}
