#include <stdio.h>

int main(void) {
    float sum = 0;
    float average, number;

    printf("Enter a number: ");
    scanf("%f", &number);

    for (int i = 0; i <= number; i++) {
        sum += i;
    }
    printf("\tSum:\t %.2f\n", sum);

    average = sum / number;
    printf("\tAverage: %.2f", average);

    return 0;
}
